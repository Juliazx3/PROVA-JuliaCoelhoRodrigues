script



let carro = [];

function adicionarImposto(financiamento){
    carro.push({financiamento});
console.log(`${financiamento}sera de 30%{preco.tofixed(2)}.`);
}
function adicionarImposto(consorcio){
    carro. push({consorcio});
console.log(`${consorcio}sera de 15%{preco.tofixed(2)}.`);
}

function calcularTotal(){
    let total = 30%;
    for(financiamento){
        total += carro.financiamento
    }
}
console.log(`total imposto:{total.tofixed(2)}.`);

